<?xml version="1.0" encoding="UTF-8"?>
<urlset
      xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9
            http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd">
    <url>
        <loc>
            {{ 'http://' ~ data.host }}
        </loc>
        <changefreq>
            {{ data.changeFreq }}
        </changefreq>
        <priority>
            {{ data.mainPriority }}
        </priority>
    </url>
    {% for name in data.pageNames %}
        <url>        
            <loc>
                {{ 'http://' ~ data.host ~ '/' ~ name }}
            </loc>
            <changefreq>
                {{ data.changeFreq }}
            </changefreq>
            <priority>
                {{ data.secondaryPriority }}
            </priority>
        </url>
    {% endfor %}
</urlset>